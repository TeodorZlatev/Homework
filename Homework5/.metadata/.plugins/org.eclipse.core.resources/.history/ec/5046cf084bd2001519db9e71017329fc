package Task3;

public class Dog{
	public static int numberOfDogs = 0;
	private String name;
	Dog(int number){
		this.name = "MyDog-"+number;
	}
	
	public String getName(){
		return name;
	}
	
	public void bark(){
		System.out.println(name + " is barking very loud.");
	}
	
	public int getNumberOfDogs(){
		return numberOfDogs;
	}
	
}