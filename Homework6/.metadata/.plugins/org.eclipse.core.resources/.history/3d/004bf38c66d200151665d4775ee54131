package Task1;

public class Circle extends Figure {
	int radius;

	public void calculatePerimeter() {
		System.out.printf("Периметърът на кръга е 2.%.2f.%d = %.2f", radius, Math.PI, (2 * radius * Math.PI));

	}

	public void calculateArea() {
		System.out.printf("Площта на кръга е %.2f.%2$d.%2$d = %.2f", Math.PI, radius, (Math.PI*radius*radius));

	}

}
