package Task1;

public class Rectangle extends Figure {
	int firstSide;
	int secondSide;

	public void calculatePerimeter() {
		System.out.printf("Периметърът на правоъгълника е 2.(%d + %d) = %d", firstSide, secondSide,
				(2 * (firstSide + secondSide)));

	}

	public void calculateArea() {
		System.out.printf("Площта на правоъгълника е %d.%d = %d", firstSide, secondSide, (firstSide * secondSide));

	}

}
