	public static List<Reply> getAllReplies(int id) throws ClassNotFoundException, SQLException {
		open();
		List<Reply> list = new LinkedList<>();
		String select = "SELECT * FROM replies WHERE topic_id="+id;
		PreparedStatement ps = connection.prepareStatement(select);
		ResultSet rs = ps.executeQuery();
		while (rs.next()) {
			Reply reply = new Reply(rs.getString(1), rs.getDate(2), rs.getInt(3), rs.getInt(4));
			list.add(reply);
		}
		close();
		return list;
	}

